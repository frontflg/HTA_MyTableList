<!DOCTYPE HTML>
<html lang="ja">
<head>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">
  <meta http-equiv="content-script-type" content="text/javascript">
  <meta http-equiv="content-style-type" content="text/css">
  <meta http-equiv="X-UA-Compatible" content="IE=Edge">
  <title>MySQLテーブル一覧</title>
  <hta:application id="myapp" 
    applicationname="MyTableList" 
    border="thick"
    caption="yes"
    navigate="yes"
    showintaskbar="yes"
    singleinstance="yes"
    sysmenu="yes"
    windowstate="normal">
  <script src="MyTableList.js" type="text/javascript"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" />
  <script type="text/javascript">
    window.moveTo(20,20)
    window.resizeTo(1330, 740)
  </script>
  <style type="text/css">
    * { margin: 10; padding: 10; }
    body {  font-size: 15px; }
    #fixedTableArea { width: 748px; height: 600px; }
    #topArea { width: 748px; float: left; overflow: hidden; }
    #bottomArea { width: 748px; height: 590px; overflow-y: scroll; }
    #fixedTableArea2 { width: 1260px; height: 600px; }
    #topArea2 { width: 1260px; float: left; overflow: hidden; }
    #bottomArea2 { width: 1260px; height: 530px; overflow: scroll; }
    .fixedTable { border-collapse: collapse; table-layout: fixed; width: 100%; }
    .fixedTable td { border: 1px solid #888; overflow: hidden; height: 30px; }
    .fixedTable td.dummyColumn { width: 17px; border: 0px; }
    .fixedTable td.dummyRow { height: 18px; border: 0px; }
    .fixedTable tr:nth-child(even) {background: #eee;}
    .fixedTable tr:hover {background: #ff0;}
  </style>
</head>
<body class="base">
  <div id="tabs">
    <ul>
      <li><a href="#tab01">一覧</a>
      <li id="li02"><a href="#tab02">詳細</a>
   </ul>
  <div id="tab01">
    <div id="fixedTableArea">
      <div id="topArea">
        <table id="topTable" class="fixedTable">
          <tbody style="color:white;">
            <tr class="bg-primary">
              <td width="150">TABLE NAME</td>
              <td width="300">TABLE COMMENT</td>
              <td width="80">COUNT</td>
              <td width="200">CREATE</td>
              <td class="dummyColumn"></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div id="bottomArea">
        <table id="bottomRTable" class="fixedTable">
          <tbody id="lst01">
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div id="tab02">
    <div id="fixedTableArea2">
      <div id="topArea2">
        <table id="topTable2" class="fixedTable">
          <tbody id="hdr02">
          </tbody>
        </table>
      </div>
      <div id="bottomArea2">
        <table id="bottomRTable2" class="fixedTable">
          <tbody id="lst02">
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script>
    setList();
  </script>
  <script>
    $('#bottomArea').scroll(function(e) {
      $('#topArea').scrollLeft($(this).scrollLeft());
    });
    $('#bottomArea2').scroll(function(e) {
      $('#topArea2').scrollLeft($(this).scrollLeft());
    });
  </script>
</div>
</body>
</html>